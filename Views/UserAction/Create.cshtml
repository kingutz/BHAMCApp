@model IEnumerable<BHAMCApp.Models.UserMgt>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<h4 class="text-info">Bha</h4>*@

<a class="text-info" asp-action="Index">Back to user action list</a>

<div class="container jumbodm">
    <div class="row text-white">

        <div class="col-md-4 ">
            @Html.DisplayNameFor(model => model.UserName)
        </div>
        <div class="col-md-2 ">
            @Html.DisplayNameFor(model => model.Created)
        </div>
        <div class="col-md-2 ">
            @Html.DisplayNameFor(model => model.Edited)
        </div>


    </div>

    @foreach (var item in Model)
    {
        <div class="row flex-row flex-nowrap text-info">

            <div class="col-md-4">
                @Html.DisplayFor(modelItem => item.UserName)
            </div>
            <div class="col-md-2 ">
                @Html.DisplayFor(modelItem => item.Created)
            </div>
            <div class="col-md-2 ">
                @Html.DisplayFor(modelItem => item.Edited)
            </div>
            <div class="col-md-3 ">
                <div class="row">
                    <div class="col-md-3 btn-bh">
                        <a class="btn-bh" asp-action="UserDetails" 
                           asp-controller="UserAction" asp-route-userid="@item.UserName">View</a>
                    </div>


                </div>

            </div>

        </div>
    }
</div>
